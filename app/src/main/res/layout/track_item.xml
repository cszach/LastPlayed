<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/track_imageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:contentDescription="The track image or album cover"
            app:srcCompat="@drawable/ic_music_note" />

        <TextView
            android:id="@+id/track_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/track_artist_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist" />
    </LinearLayout>
</androidx.cardview.widget.CardView>